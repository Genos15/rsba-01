type Order {
    id: ID!
    referenceNumber: String!
    description: String
    createdAt: DateTime!
    editedAt: DateTime!
    customer: Customer
    manager: Agent
    agent: Agent
    startAt: DateTime
    estimatedAt: DateTime
    progress: Float
    type: OrderType
    deliveryStartAt: DateTime!
    deliveryEndAt: DateTime!
    deliveryAt: DateTime
    packagingAt: DateTime
    receptionAt: DateTime
    items: [Item!]
    tasks: [Task!]
    technologies: [Technology!]
    parameters: [Parameter!]
    categories: [ItemCategory!]
    worklogs: [Worklog!]
    status: OrderStatus!
}

type OrderConnection {
    edges: [OrderEdge]
    pageInfo: PageInfo
}

type OrderEdge {
    cursor: String
    node: Order
}

enum OrderStatus {
    DRAFT
    SUSPENDED
    ANALYZING
    PRODUCTION
    DELIVERED
}

enum OrderLayer {
    USER
    DEPARTMENT
}

type OrderSearchInputValue {
    id:ID!
    input: [String!]!
    first: Int
    after: ID
}

type OrderSearchInstance {
    input: OrderSearchInputValue!
    items: ItemConnection @connection(for: "Item")
    tasks: TaskConnection @connection(for: "Task")
    technologies: TechnologyConnection @connection(for: "Technology")
    parameters: ParameterConnection @connection(for: "Parameter")
}
