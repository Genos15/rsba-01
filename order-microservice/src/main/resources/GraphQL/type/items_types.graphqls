type Item {
    id: ID!
    name: String!
    description: String
    material: String
    createdAt: DateTime
    editedAt: DateTime
    operations: [Operation]
    tasks: [Task]
    category: ItemCategory
    components: [Item]
    quantity: Float!
    progress: Float!
    orderId: ID
}

type GraphItem {
    id: ID!
    name: String!
    description: String
    material: String
    createdAt: DateTime
    editedAt: DateTime
    orderId: ID!
    parentId: ID
}

type ItemEdge {
    cursor: String
    node: Item
}

type ItemConnection {
    edges: [ItemEdge]
    pageInfo: PageInfo
}

