type Task {
    id: ID!
    quantity: Float!
    estimatedTimeInHour: Float!
    description: String
    estimatedEndDate: DateTime!
    estimatedStartDate: DateTime!
    createdAt: DateTime!
    editedAt: DateTime!
    operation: Operation
    item: Item
    #    departments: [Department!]
    #    comments: [Comment!]
    #    users: [User!]
    order: Order
    #    parameters: [Parameter!]
}

type TaskEdge {
    cursor: String
    node: Task
}

type TaskConnection {
    edges: [TaskEdge]
    pageInfo: PageInfo
}

enum TaskStatus {
    ALLOCATED
    TERMINATED
}

enum TaskLayer{
    USER
    WORKCENTER
    DEPARTMENT
}